#include <iostream>
using namespace std;
int main()
{
bool isprime=1;
int n;
cout<<"enter a number: "<<endl;
cin>>n;
for(int i=2;i<n;i++){
    if(n%i==0){
        isprime=0;
        break;
    }
}
if(isprime==0){
    cout<<"it is not a prime number: "<<endl;

}
else{
    cout<<"it is a prime number: "<<endl;
}
    
    return 0;
}
